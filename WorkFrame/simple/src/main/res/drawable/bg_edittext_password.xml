<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--背景-->
<item android:height="40dp"
    android:width="2000dp">
<shape>
    <solid android:color="@color/color_purple_dark"/>
    <corners android:radius="10dp"/>
</shape>
</item>
    <!--三角形-->
<item android:width="20dp" android:height="20dp"
android:gravity="center|right" android:right="8dp" android:bottom="10dp">
<rotate android:fromDegrees="45" android:toDegrees="45">
    <shape android:shape="rectangle">
        <solid android:color="#FFFFFF"/>
        <stroke android:color="#aaaaaa" android:width="1dp"/>
    </shape>
</rotate>
</item>
    <!--遮盖三角形上面的部分-->
<item android:width="35dp" android:height="15dp" android:gravity="top|right">
<shape android:shape="rectangle">
    <solid android:color="@color/color_purple_dark"/>
    <corners android:topRightRadius="10dp"/>
</shape>
</item>
    </layer-list>

