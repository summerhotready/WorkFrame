<?xml version="1.0" encoding="utf-8"?>
    <!--android.support.constraint.ConstraintLayout-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"></FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_10">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="work组件"
        android:textSize="12dp"
        android:drawableTop="@mipmap/icon_gis_on"
        android:textColor="@color/text_color_click"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_other"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="第三方测试"
        android:textSize="12dp"
        android:drawableTop="@mipmap/icon_manage_off"
        android:textColor="@color/text_color_tab"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_system"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="系统组件"
        android:textSize="12dp"
        android:drawableTop="@mipmap/icon_manage_off"
        android:textColor="@color/text_color_tab"/>
</LinearLayout>

</LinearLayout>
