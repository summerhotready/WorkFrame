<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_bottom"
        android:elevation="2dp"></FrameLayout>

    <Space
        android:id="@+id/line_bottom"
        app:layout_constraintBottom_toTopOf="@id/my_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="5dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/my_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/other_tv"
        android:text="work组件"
        android:textSize="12dp"
        app:layout_constraintHorizontal_weight="1"
        android:textColor="@color/text_color_click"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/my_image"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@id/my_tv"
        app:layout_constraintLeft_toLeftOf="@id/my_tv"
        app:layout_constraintRight_toRightOf="@id/my_tv"
        android:tint="@color/color_yellow_dark"
        app:srcCompat="@drawable/icon_tab_my"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/other_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:text="第三方测试"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/my_tv"
        app:layout_constraintLeft_toRightOf="@id/my_tv"
        app:layout_constraintRight_toLeftOf="@id/system_tv"
        app:layout_constraintHorizontal_weight="1"
        android:textColor="@color/text_color_tab"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/other_image"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@id/other_tv"
        app:layout_constraintLeft_toLeftOf="@id/other_tv"
        app:layout_constraintRight_toRightOf="@id/other_tv"
        android:tint="@color/color_yellow_dark"
        app:srcCompat="@drawable/icon_tab_other"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/system_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/my_tv"
        app:layout_constraintLeft_toRightOf="@id/other_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:text="系统组件"
        android:textSize="12dp"
        app:layout_constraintHorizontal_weight="1"
        android:textColor="@color/text_color_tab"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/system_image"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@id/system_tv"
        app:layout_constraintLeft_toLeftOf="@id/system_tv"
        app:layout_constraintRight_toRightOf="@id/system_tv"
        android:tint="@color/color_yellow_dark"
        app:srcCompat="@drawable/icon_tab_system"/>


</androidx.constraintlayout.widget.ConstraintLayout>
