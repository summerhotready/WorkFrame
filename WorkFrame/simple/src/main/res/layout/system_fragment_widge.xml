<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_15">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            style="@style/TextTitleStyle"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="stand" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="clickable" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_ripple"
                android:text="ripple" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch"
                style="@style/TextTitleStyle"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
            <Switch
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track" />
                <ToggleButton
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:button="@drawable/switch_thumb"
                    android:textOn=""
                    android:textOff=""
                    android:checked="true"
                    android:background="@drawable/switch_track"
                    />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                style="@style/TextTitleStyle"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/padding_15"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="This is an scroll TextView ^_^.
              This is second line.
              This is Third line.
              abcdefghijklmnopqrstuvwxyz 1234567890.
              one two three four five six seven eight nine ten." />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_selector"
                android:maxLines="3"
                android:minLines="3"
                android:paddingRight="5dp"
                android:text="This is an scroll TextView ^_^.
              This is second line.
              This is Third line.
              abcdefghijklmnopqrstuvwxyz 1234567890.
              one two three four five six seven eight nine ten."
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:singleLine="false" />
<!---->
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EditView" />



<!---->


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="10">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_password"
                    android:paddingLeft="@dimen/padding_10"
                    android:hint="带字数检测" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleDrawable="@drawable/toggle_login_pwd"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="改变输入键盘按钮"
                    android:imeActionLabel="注册"
                    android:imeOptions="actionUnspecified" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>