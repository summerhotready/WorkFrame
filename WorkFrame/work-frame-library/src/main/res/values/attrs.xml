<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="Max" format="integer"></attr>
    <declare-styleable name="CheckStart">
        <attr name="Progress" format="integer"></attr>
        <attr name="Max"/>
        <attr name="StartGravity" format="enum">
            <enum name="left" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="center" value="0"></enum>
            <enum name="top" value="3"></enum>
            <enum name="bottom" value="4"></enum>
        </attr>
        <attr name="StartOrientation" format="enum">
            <enum name="vertical" value="1"></enum>
            <enum name="horizontal" value="0"></enum>
        </attr>
        <attr name="StartMode" format="enum">
            <enum name="only" value="1"></enum>
            <enum name="which" value="2"></enum>
            <enum name="range" value="3"></enum>
            <enum name="begin" value="0"></enum>
        </attr>
        <attr name="StartMargin" format="dimension"></attr>
        <attr name="StartSize" format="dimension"></attr>
        <attr name="isChecked" format="boolean"></attr>
        <attr name="CheckedDrawable" format="reference"></attr>
        <attr name="UncheckDrawable" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="ProgressShowView">
        <attr name="ProgressBackground" format="reference"></attr>

    </declare-styleable>

    <declare-styleable name="CalendarView">
        <attr name="mc_color" format="color"/>
        <attr name="mc_selectColor" format="color"/>
        <attr name="mc_selectTextColor" format="color"/>
        <attr name="mc_textColor" format="color"/>
        <attr name="mc_startsOnSunday" format="boolean"/>
    </declare-styleable>

    <!-- 进度条属性 -->
    <declare-styleable name="CustomProgress">
        <attr name="pgText" format="reference|string" />
    </declare-styleable>
<!--gif播放器-->
    <declare-styleable name="GifImageView">
        <!--gif文件引用-->
        <attr name="gif_src" format="reference"  />
        <!--是否加载完自动播放-->
        <attr name="auth_play" format="boolean"  />
        <!--播放次放，默认永远播放-->
        <attr name="play_count" format="integer"  />
        <!--播放完成后是否停留在最后一帧，默认false-->
        <attr name="end_last_frame" format="boolean"  />
    </declare-styleable>

</resources>